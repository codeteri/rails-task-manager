<div class="container mt-5">
  <div class="text-center">
    <h2><%= @task.title %></h2>
    <p><%= @task.details %></p>

    <% if @task.completed %>
      <p><i class="fas fa-check-square text-success"></i> This task has been completed</p>
    <% else %>
      <p><i class="far fa-square text-danger"></i> This task hasn't been completed</p>
    <% end %>

    <br>
    <%= link_to "Edit Task", edit_task_path(@task), class: "btn btn-primary" %>
    <%= link_to "Back to list", tasks_path, class: "btn btn-secondary" %>
  </div>
</div>
